generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // URL теперь задаётся только через prisma.config.ts / PrismaClientOptions
}

model User {
  id       String @id @default(nanoid())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  games TicTacToeGame[]
  leaderboard Leaderboard? 
  @@map("users")
}

model TicTacToeGame {
  id        String   @id @default(cuid())
  playerId  String
  board     String   @default("---------") // 9 символов для клеток, '-' пустая
  turn      String   @default("X") // чей ход: X или O
  status    String   @default("playing") // playing, won, draw
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  player User @relation(fields: [playerId], references: [id])
}

model TicTacToeGameOnline {
  id        String   @id @default(nanoid())
  playerX   String
  playerO   String? // второй игрок подключится позже
  board     String   @default("[null,null,null,null,null,null,null,null,null]")
  current   String?  @default("X")
  status    String   @default("waiting") // waiting / playing / finished
  winner    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Leaderboard {
  id        String   @id @default(cuid())
  userId    String   @unique
  wins      Int      @default(0)
  losses    Int      @default(0)
  draws     Int      @default(0)
  rating    Int      @default(1000) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
